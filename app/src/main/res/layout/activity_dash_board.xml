<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F6F6F6"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Section -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="#5DC2C2"
            android:padding="16dp">

            <!-- Avatar -->
            <ImageView
                android:id="@+id/avatarImage"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="16dp"
                android:src="@drawable/prof"
                android:contentDescription="Avatar Image" />

            <!-- Welcome Text -->
            <TextView
                android:id="@+id/welcomeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to KSM App"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_below="@id/avatarImage"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="8dp" />

            <!-- Greeting Text -->
            <TextView
                android:id="@+id/greetingText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Good Afternoon"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="16dp"
                android:layout_alignParentTop="true" />
        </RelativeLayout>

        <!-- Task List Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task List"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:layout_marginStart="16dp" />

        <!-- Clock Image -->
        <ImageView
            android:id="@+id/clockImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:src="@drawable/clock2"
            android:contentDescription="Clock Image" />

        <!-- Task Card -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:layout_marginTop="16dp">

            <!-- Daily Task Title -->
            <TextView
                android:id="@+id/dailyTaskTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daily Tasks"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_alignParentStart="true" />

            <!-- Add Task Button -->
            <Button
                android:id="@+id/addTaskButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="8dp"
                android:background="@drawable/ic_add"
                android:contentDescription="Add Task"
                app:tint="#5DC2C2" />

            <!-- Task Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/dailyTaskTitle"
                android:layout_marginTop="16dp">

                <!-- Example Task Item -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#5AC8FA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn Programming by 12PM"
                        android:textColor="#000000"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Add more tasks as needed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#5AC8FA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Learn how to cook by 1PM"
                        android:textColor="#000000"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <!-- Example Task -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:buttonTint="#5AC8FA" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Have lunch at 4PM"
                        android:textColor="#000000"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</ScrollView>
